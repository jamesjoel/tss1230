<%- include("../../includes/header"); %>
<div class="container" style="margin-top: 100px; min-height: 600px;">
    <div class="row">
        <div class="col-md-12">
            <h1>Staff List</h1>
            <% if(result.length == 0){  %>
                <div class="alert alert-danger my-4">
                    No Data Found
                </div>
            <% }else{ %>
                <table class="table table-dark">
                    <tr>
                        <th>S.No.</th>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Detail</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    <% result.forEach((s, n)=>{ %>
                        <tr>
                            <td><%= n+1 %></td>
                            <td><%= s.name %></td>
                            <td><%= s.contact %></td>
                            <td><a href="/staff/details/<%= s._id %>" class="btn btn-sm btn-light">Detail</a></td>
                            <td><a href="/staff/edit/<%= s._id %>" class="btn btn-info btn-sm">Edit</a></td>
                            <td><a href="/staff/delete/<%= s._id %>" class="btn btn-danger btn-sm">Delete</a></td>
                        </tr>
                    <% }) %>
                </table>
            <% } %>
            
        </div>
    </div>
</div>
<%- include("../../includes/footer"); %>