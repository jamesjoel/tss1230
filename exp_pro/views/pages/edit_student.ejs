<%- include("../includes/header") %>


<div class="container" style="min-height: 700px;">
    <h1>Update Student</h1>
    
    <div class="row">
        
        <form action="/updatestu/<%= data._id %>" method="post">
        <div class="col-md-6 offset-md-3">
            <div class="mb-3">
                <label class="form-lable">Full Name</label>
                <input value="<%= data.name %>" type="text" name="name" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-lable">Email</label>
                <input type="text" value="<%= data.email %>" name="email" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-lable">Address</label>
                <textarea class="form-control" name="address"><%= data.address %></textarea>
            </div>
            
            <div class="mb-3">
                <label class="form-lable">City</label>
                <select name="city" class="form-control" >
                    <option>Select</option>
                    <% result.forEach(x=>{ %>
                        <option <% if(data.city==x.name){ %> selected <% } %>><%= x.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-lable">Gender</label>
                Male<input type="radio" <% if(data.gender=="male"){%> checked <% } %> value="male"  name="gender"/>
                Female<input type="radio" <% if(data.gender=="female"){%> checked <% } %> value="female"  name="gender"/>
            </div>
            <div class="mb-3">
                <label class="form-lable">Contact</label>
                <input type="text" value="<%= data.contact %>" name="contact" class="form-control" />
            </div>
            <br />
            <input type="submit"  value="Update" class="btn btn-primary" />
        </div>
        </form>
    </div>
    
</div>
<%- include("../includes/sale") %>
<%- include("../includes/footer") %>